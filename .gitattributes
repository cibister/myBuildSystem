###############################################################################
# Use cg-diff to diff  CG files
###############################################################################
*.vi diff=cg-diff
*.vim diff=cg-diff
*.vit diff=cg-diff
*.ctt diff=cg-diff
*.ctl diff=cg-diff

###############################################################################
# Use nxg-diff to diff  NXG files
###############################################################################
*.gvi diff=nxg-diff
*.gcdl diff=nxg-diff